@page "/"
@inject ActorsOS os

@if (os.IsSignedIn) {
    <Main />
} else {
    <Welcome />
}

@code {
    protected override async Task OnInitializedAsync() {
       await os.InitializeAsync();
       os.TokenChanged += TokenHasChanged;
    }

    void TokenHasChanged(string _)
    {
        this.StateHasChanged();
    }

}